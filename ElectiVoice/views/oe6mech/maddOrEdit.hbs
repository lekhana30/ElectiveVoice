<h3>{{viewTitle}}</h3>

    <form action="/oe6mech" method="POST" autocomplete="off">
        <input type="hidden" name="_id" value="{{oe6mech._id}}">
        <div class="form-group">
            <label>Course Title</label>
            <input type="text" class="form-control" name="CourseTitle" placeholder="CourseTitle" value="{{oe6mech.CourseTitle}}">
            <div class="text-danger">
                {{oe6mech.CourseTitleError}}</div>
        </div>
        <div class="form-group">
            <label>Course Code</label>
            <input type="text" class="form-control" name="CourseCode" placeholder="CourseCode" value="{{oe6mech.CourseCode}}">
            <div class="text-danger">
                {{oe6mech.CourseCodeError}}</div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Credits</label>
                <input type="text" class="form-control" name="Credits" placeholder="Credits" value="{{oe6mech.Credits}}">
            </div>
        </div>
            <div class="form-group col-md-6">
                <label>CourseContents</label>
                <input type="text" class="form-control" name="CourseContents" placeholder="CourseContents" value="{{oe6mech.CourseContents}}">
            </div>
        
            <div class="form-group col-md-6">
                <label>TextBooks</label>
                <input type="text" class="form-control" name="TextBooks" placeholder="TextBooks" value="{{oe6mech.TextBooks}}">
            </div>
             <div class="form-group col-md-6">
                <label>Reference Books</label>
                <input type="text" class="form-control" name="ReferenceBooks" placeholder="ReferenceBooks" value="{{oe6mech.ReferenceBooks}}">
            </div>
             <div class="form-group col-md-6">
                <label>SubjectTeacher</label>
                <input type="text" class="form-control" name="SubjectTeacher" placeholder="SubjectTeacher" value="{{oe6mech.SubjectTeacher}}">
            </div>
             <div class="form-group col-md-6">
                <label>OptedStudents</label>
                <input type="text" class="form-control" name="OptedStudents" placeholder="OptedStudents" value="{{oe6mech.OptedStudents}}">
            </div>
             <div class="form-group col-md-6">
                <label> PassedStudents</label>
                <input type="text" class="form-control" name="PassedStudents" placeholder="PassedStudents" value="{{oe6mech.PassedStudents}}">
                
            </div>

        
        <div class="form-group">
            <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
            <a class="btn btn-secondary" href="/oe6mech/mlist"><i class="fa fa-list-alt"></i> View All</a>
        </div>
    </form>



    
        
    
   
        
   

    
   